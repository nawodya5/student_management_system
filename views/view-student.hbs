<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">View Students</li>
    </ol>

</nav>
<div class="col-6 d-flex justify-content-end">
    <a href="/addStudent" type="button" class="btn btn-primary align-self-center">+ add Student</a>
</div>

<div class="view-user p-5">

    <div class="row mb-5">
        <div class="col text-center">
            <h3>{{this.first_name}} {{this.last_name}}</h3>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Comments</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each rows}}
                    <tr>
                        <th scope="row">{{this.first_name}}</th>
                        <td>{{this.last_name}}</td>
                        <td>{{this.email}}</td>
                        <td>{{this.phone}}</td>
                        <td>{{this.comments}}</td>
                        <td class="text-end">
                            <a href="/viewStudent/{{this.id}}" type="button" class="btn btn-light btn-small"><i
                                    class="bi bi-eye"></i> View</a>
                            <a href="/editStudent/{{this.id}}" type="button" class="btn btn-light btn-small"><i
                                    class="bi bi-pencil"></i> Edit</a>
                            <a href="/delete/{{this.id}}" type="button" class="btn btn-light btn-small"><i
                                    class="bi bi-person-x"></i>
                                Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

</div>